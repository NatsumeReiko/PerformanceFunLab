<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lab.fun.performance.javaheap.TargetHeapObjectCountTest">


    <lab.fun.performance.customview.TargetTextView
        android:id="@+id/test_is_user_input_text_true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="user_input_text_true"
        android:textColor="#f00"
        android:textSize="30dp"
        app:is_user_input_text="true" />

    <lab.fun.performance.customview.TargetTextView
        android:id="@+id/test_is_user_input_text_false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="user_input_text_false"
        android:textColor="#f0f"
        android:textSize="30dp"
        app:is_user_input_text="false" />

</LinearLayout>
